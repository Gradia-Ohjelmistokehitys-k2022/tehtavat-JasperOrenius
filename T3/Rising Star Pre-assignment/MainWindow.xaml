<Window x:Class="Rising_Star_Pre_assignment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rising_Star_Pre_assignment"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal">
                <Label Content="Start Date:" VerticalAlignment="Center"/>
                <DatePicker x:Name="startDatePicker" Margin="10,0"/>
                <Label Content="End Date:" VerticalAlignment="Center"/>
                <DatePicker x:Name="endDatePicker" Margin="10,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Button Content="Fetch Data" Click="FetchData_Click" Width="100" Margin="5"/>
            </StackPanel>
            <Canvas x:Name="chartCanvas" Width="600" Height="300" Background="LightGray" Margin="0,20"/>
        </StackPanel>
    </Grid>
</Window>